
<MainSetup>:
    orientation: 'vertical'
    id: Main_Box
    BoxLayout:
        size_hint_y: None
        height: 50
        TextInput:
            id: Link_input
            padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]
        Button:
            size_hint_x: None
            width: 100
            text:'...'
    ScrollView:
        id: Scroller

<SoundControl>:
    orientation: 'vertical'
    size_hint_x: None
    width: 300
    TextInput:
        id: SoundName
        padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]
        size_hint_y: None
        height: 50
    Label:
        id: Slider_val
        text: '100'
    Slider:
        orientation: 'vertical'
        min: 0
        max: 200
        value: 100
        step: 1
        id: Da_Slider
        sensitivity: 'handle'
        on_touch_move: root.get_slider_val()
        size_hint_y: None
        height: 200
    BoxLayout:
        Widget:
        Button:
            text: 'X'
            size_hint: None, None
            height: 30
            width: 30
        Button:
            text: 'P/P'
            size_hint: None, None
            height: 30
            width: 30
        Widget:
    Widget: